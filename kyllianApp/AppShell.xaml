<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:kyllianApp.Views"
    x:Class="kyllianApp.AppShell">

    <TabBar>
       
        <Tab Title="Accueil" Icon="home.png">
            <ShellContent ContentTemplate="{DataTemplate views:HomePage}" />
        </Tab>

       
        <Tab Title="Personnages" Icon="person.png">
            <ShellContent ContentTemplate="{DataTemplate views:CharactersPage}" />
        </Tab>

        
        <Tab Title="Ajouter" Icon="plus.png">
            <ShellContent ContentTemplate="{DataTemplate views:AddCharacterPage}" />
        </Tab>
    </TabBar>

</Shell>

